<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:background="#2CC9D8">

  <Button
    android:id="@+id/log_in"
    android:layout_alignParentTop="true"
    android:layout_alignParentRight="true"
    android:background="@android:color/transparent"
    android:layout_width="wrap_content"
    android:text="Log In"
    android:layout_height="wrap_content"
    />

  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical">

    <TextView
      android:id="@+id/title"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="140dp"
      android:fontFamily="@font/majel_font"
      android:lineHeight="63sp"
      android:text="FitOut"
      android:textAlignment="center"
      android:textColor="@android:color/white"
      android:textSize="70sp" />

    <TextView
      android:id="@+id/description1"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginLeft="36dp"
      android:layout_marginTop="24dp"
      android:layout_marginRight="36dp"
      android:height="76dp"
      android:fontFamily="@font/cabin_regular_font"
      android:text="The best way to stay on top of your favorite fitness news and activity"
      android:textAlignment="center"
      android:textColor="#ffffff"
      android:textSize="18sp"
      android:visibility="visible" />


  </LinearLayout>

  <com.facebook.login.widget.LoginButton
    android:id="@+id/login_button"
    android:visibility="gone"
    android:layout_width="match_parent"
    android:layout_height="55dp"
    android:layout_alignParentBottom="true"
    android:layout_marginStart="32dp"
    android:layout_marginEnd="32dp"
    android:fontFamily="@font/cabin_bold_font"
    android:layout_marginBottom="168dp"
    android:textAllCaps="false"
    android:background="@drawable/bg_round_fill_blue"
    android:text="Continue with Facebook"
    android:textColor="#FFFFFF" />

  <Button
    android:id="@+id/login_button2"
    android:layout_width="match_parent"
    android:layout_height="55dp"
    android:layout_alignParentBottom="true"
    android:layout_marginStart="32dp"
    android:layout_marginEnd="32dp"
    android:fontFamily="@font/cabin_bold_font"
    android:layout_marginBottom="168dp"
    android:textAllCaps="false"
    android:background="@drawable/bg_round_fill_blue"
    android:text="Continue with Facebook"
    android:textColor="#FFFFFF" />

  <Button
    android:id="@+id/sine_up_button"
    android:layout_width="match_parent"
    android:layout_height="55dp"
    android:fontFamily="@font/cabin_bold_font"
    android:layout_alignParentBottom="true"
    android:layout_marginStart="32dp"
    android:layout_marginEnd="32dp"
    android:layout_marginBottom="101dp"
    android:background="@drawable/bg_round_fill"
    android:textAllCaps="false"
    android:text="Sign Up Manually"
    android:textColor="#000000" />

  <TextView
    android:id="@+id/description2"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginLeft="36dp"
    android:layout_marginBottom="31dp"
    android:layout_alignParentBottom="true"
    android:layout_marginRight="36dp"
    android:fontFamily="@font/avenir_roman_font"
    android:text="By Signing up you are in agreement with FitOut terms and services. Fore more information look here."
    android:textAlignment="center"
    android:textColor="#ffffff"
    android:textSize="12sp"
    />

  <include layout="@layout/loading_indicator" />

</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  xmlns:tools="http://schemas.android.com/tools">

  <de.hdodenhof.circleimageview.CircleImageView
    android:id="@+id/profile_image"
    android:layout_width="30dp"
    android:layout_height="30dp"
    android:layout_alignParentStart="true"
    android:layout_alignParentBottom="true"
    android:layout_marginStart="4dp"
    android:layout_marginBottom="4dp"
    android:src="@drawable/different_faggot" />

  <TextView
    android:id="@+id/senders_message"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentStart="true"
    android:layout_marginStart="38dp"
    android:layout_marginTop="12dp"
    android:layout_marginEnd="42dp"
    android:layout_marginBottom="20dp"
    android:background="#2CC9D8"
    android:fontFamily="@font/cabin_medium_font"
    android:gravity="start"
    android:padding="12dp"
    android:text="Preciate the kind words! What are you looking to know? How can I help?"
    android:textColor="#FFFFFF"
    android:textSize="16sp" />

  <TextView
    android:layout_marginStart="40dp"
    android:id="@+id/timeAgo"
    android:layout_width="wrap_content"
    android:textSize="12sp"
    android:fontFamily="@font/avenir_roman_font"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true"
    tools:text="132"
    android:textColor="@android:color/darker_gray" />

</RelativeLayout>